# Description: An extensible, customizable, free/libre text editor
# Homepage:    https://www.gnu.org/software/emacs/index.html
# Maintainer:  Eike Beyer, eike dot beyer at yandex dot com
# Depends on:  gnutls

name=emacs
version=29.3
release=1
source=(https://ftpmirror.gnu.org/$name/$name-$version.tar.gz)

build() {
    cd $name-$version

     ./configure --prefix=/usr \
                 --with-x \
                 --with-x-toolkit=athena \
                 --with-xft \
                 --with-sound=alsa \
                 --without-dbus \
                 --without-gconf \
                 --without-gsettings \
                 --without-gpm \
                 --without-toolkit-scroll-bars
     make

     make DESTDIR=$PKG/ install
}
